<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:UtahOpenSource.Clients.UI;assembly=UtahOpenSource.Clients.UI"
    x:Class="UtahOpenSource.Clients.UI.CodeOfConductPage"
    Title="Code of Conduct"
    
    BackgroundColor="{DynamicResource WindowBackgroundTable}">
     <local:AlwaysScrollView>
        <StackLayout Spacing="{DynamicResource CardSpacing}"
                    Padding="{DynamicResource CardPadding}">
             <local:CardView>
                 <StackLayout Spacing="0">
                    <StackLayout HorizontalOptions="FillAndExpand" 
                                 VerticalOptions="FillAndExpand" 
                                  BackgroundColor="White"
                                  Padding="{StaticResource StandardPadding}">
                       
                        <Label x:Name="CodeOfConductText"
                               Style="{DynamicResource EvolveListItemDetailextStyle}"/>
                   </StackLayout>
                </StackLayout>
            </local:CardView>
        </StackLayout>
    </local:AlwaysScrollView>
</ContentPage>
